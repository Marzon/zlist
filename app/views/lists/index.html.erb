<p class="top-right-links"><%= link_to 'Add a new list', new_list_path if current_user.admin? %></p>
<% if current_user.admin? %>
	<h2>Mailing Lists</h2>
<% else %>
	<% if current_user.lists.empty? %>
		<h3>You are not subscribed to any lists. <%= link_to "View all available lists", available_lists_path %></h3>
	<% else %>
		<h3>My Lists</h3>
	<% end %>
<% end %>
<table>
	<%= render :partial => @lists %>
</table>
