<span style="float:right;" align="right">
<% if current_user.admin? %>
	<p>
      <%= link_to "[edit list]", edit_list_path(@list) %> | 
	  <%= link_to "[delete list]", list_path(@list), :method => :delete, :confirm => "Are you sure?" %>
    </p>
    <p>
      <%= link_to "[send test]", send_test_list_path(@list) %> 
    </p>
<% else %>
  <% if @list.subscribers.include?(current_user) %>
    <p><em>You are subscribed to this list</em></p>
    <p><%= link_to "[unsubscribe]", unsubscribe_list_path(@list) %></p>
  <% else %>
    <p><%= link_to "[subscribe]", subscribe_list_path(@list) %></p>
  <% end %>
<% end %>
</span>
<h2><%=h @list.name %></h2>
<p><%=h @list.description %></p>

<div id="hidden_subscription_form">
	<%= render :partial => 'lists/hidden_subscription_form', :locals => { :subscription => @subscription, :list => @list } %>
</div>

<div id="subscriptions">
	<%= render :partial => 'lists/subscriptions', :locals => { :subscriptions => @list.subscriptions, :available_subscribers => @available_subscribers } %>
</div>

<h3>Recent Topics</h3> 
<%= @list.topics.present? ? (render :partial => @list.topics) : "There are no recent topics for this list." %>
<%= link_to h("[All Topics]"), list_topics_path(@list) %>

<br />
<br />
<%= link_to 'Back', lists_path %>
