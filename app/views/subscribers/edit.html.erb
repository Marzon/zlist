<h1>Editing subscriber</h1>

<% form_for(@subscriber) do |f| %>
  <%= f.error_messages %>
	<%= render :partial => 'form', :locals => { :f => f } %>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Delete this subscriber', @subscriber, :confirm => 'Are you sure you want to delete this subscriber? This will permanently delete the user as well as any messages that they have created.  Consider disabling the user instead.', :method => :delete %> |
<%= link_to 'Go Back', subscribers_path %>
